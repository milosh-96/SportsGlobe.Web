<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Sports Globe</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/SportsGlobe.Web.styles.css" asp-append-version="true" />
    @await RenderSectionAsync("Styles", required: false)
</head>
<body>
    <header id="top-header">
        <div class="top-header__logo">
            Sports Globe
        </div>
        <nav style="display:flex;flex-direction:column;" id="sports-selector">
            <a class="item" href="#football">Football (soccer)</a>
            <a class="item" href="#baseball">Baseball</a>
            <a class="item" href="#basketball">Basketball</a>
            <a class="item" href="#ice-hockey">Ice Hockey</a>
        </nav>
    </header>
    
    <main role="main">
        @RenderBody()
    </main>
    <footer style="bottom:0; left: 0; position:absolute; z-index:999">
        <div>
            &copy; @DateTime.UtcNow.Year - Sports Globe.
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    <script>
        
    </script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
