@using SportsGlobe.Web.ViewModels.Stadiums
@model AddStadiumViewModel
<h2>@ViewData["Title"]</h2>
<div class="row">
    <div class="col col-md-4 mx-auto">
        <form method="post">
            <div class="form-group">
                <div class="input-group">
                    <label asp-for="Name" class="visually-hidden"></label>
                    <input asp-for="Name"
                        autocomplete="off" autofocus="on"
                        class="form-control"
                        placeholder="Stadium name..."
                        type="text" />
                </div>
            </div>
            <hr />
            <div class="row">
                <div class="col">
                    @for(int i = 0; i < Model.Sports.Count; i++)
                    {
                       <div class="form-check">
                            <input class="form-check-input" id="SelectedSports-@i" name="SelectedSports[]" type="checkbox" value="@Model.Sports[i].Id">
                            <label class="form-check-label" for="SelectedSports-@i">
                                @Model.Sports[i].Name
                            </label>
                        </div>
                    }
                </div>
            </div>
            <hr />
            <div class="row">
                <div class="col">
                    <div class="form-group">
                        <label asp-for="LatLongInput">Latitude / Longitude</label>
                        <input asp-for="LatLongInput" autocomplete="off" class="form-control" type="text" />
                    </div>
                </div>
            </div>
            <hr />
            <div>
                <button class="btn btn-primary w-100">Add</button>
            </div>
        </form>
    </div>
</div>