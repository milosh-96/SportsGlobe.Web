@using SportsGlobe.Web.ViewModels.Stadiums
@model AddStadiumViewModel
<form method="post" action="/stadiums/add">
    <div class="form-group">
        <div class="input-group">
            <label asp-for="Name" class="visually-hidden"></label>
            <input asp-for="Name"
                   autocomplete="off" autofocus="on"
                   class="form-control"
                   placeholder="Stadium name..."
                   type="text" />
        </div>
    </div>
    <hr />
    <div class="row">
        <div class="col">
            @for (int i = 0; i < Model.Sports.Count; i++)
            {
                <div class="form-check">
                    <input class="form-check-input" id="SelectedSports" name="SelectedSports[]" type="checkbox" value="@Model.Sports[i].Id">
                    <label class="form-check-label" asp-for="SelectedSports">
                        @Model.Sports[i].Name
                    </label>
                </div>
            }
        </div>
    </div>
    <hr />
    <div class="row">
        <div class="col">
            <div class="form-group">
                <label asp-for="LatLongInput">Latitude / Longitude</label>
                <input asp-for="LatLongInput" autocomplete="off" class="form-control" type="text" />
            </div>
        </div>
    </div>
